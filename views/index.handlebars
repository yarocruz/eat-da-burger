<div class="container">
    <p class="burger-icon">ğŸ”</p>

    <h1 class="mb-4">Eat Da Burger</h1>

    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="type a burger name" aria-label="burger name" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <span class="input-group-text" id="burger-btn">Add a Burger</span>
        </div>
    </div>

    <h3 class="my-4">Added Burgers</h3>

    <ul class="list-group">
        {{#each burger}}
        {{#unless this.devoured}}
        
            <li class="list-group-item">{{burger_name}}
                <button class="devour" data-id="{{this.id}}" data-devoured={{devoured}}>Devour Burger</button>
            
            </li>
        
        {{/unless}}
        {{/each}}
    </ul>

    <h3 class="my-4">Devoured Burgers</h3>

    <ul class="list-group">
        {{#each burger}}
        {{#if this.devoured}}
        <li class="list-group-item devoured">{{this.burger_name}}</li>
        {{/if}}
        {{/each}}
    </ul>
</div>